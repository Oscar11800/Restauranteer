<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/loginbkg">

    <TextView
        android:id="@+id/logo"
        android:layout_width="380dp"
        android:layout_height="90dp"
        android:background="@drawable/loginbutton"
        android:drawableRight="@drawable/ittybittymainlogo"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:hint="RESTAURANTEER"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textSize="28sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="26dp"
            android:background="@drawable/loginbox">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:id="@+id/LoginText"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Connect with your friends to explore fine dining options in your area"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="Email or Phone"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/offwhite"
                android:backgroundTint="#00FFFFFF"
                android:elevation="0dp"
                android:text="Forgot Password?"
                android:textColor="@color/bluelink"
                android:textSize="15sp"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold" />
            <Button
                app:cornerRadius = "20dp"
                android:gravity="center"
                android:text="Sign In"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/loginButton"
                android:layout_marginTop="0dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/loginbutton"/>
            <TextView
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OR"
                android:gravity="center"
                android:textSize="14dp"
                android:background="@color/offwhite"
                android:paddingBottom="10dp"/>
            <Button
                app:cornerRadius = "20dp"
                android:gravity="center"
                android:text="Sign In with google"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/loginwithgoogleButton"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/loginbutton"
                android:drawableRight="@drawable/ittybittygoogleicon"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>